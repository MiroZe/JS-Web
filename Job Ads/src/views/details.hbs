

            <section id="details-page">
                <article class="details-gage-title">
                    <h1>Details Page</h1>
                </article>
                <article class="details-page-card">

                    <article class="details-page-card-image">
                    
                        <img src="/img/man.png" alt="details-image">
                    </article>

                    <article class="details-page-card-content">
                        <p>Author: {{onePosition.author.email}}</p>
                        <h2>Headline: {{onePosition.headline}}</h2>
                        <h3>Company name: {{onePosition.companyName}}</h3>
                        <h4>Company description: {{onePosition.companyDescription}}</h4>
                        <h5>Location: {{onePosition.location}}</h5>
                        {{#if user}}
                        <article class="details-page-card-buttons">
                            <!--only for registered users and author of the ad-->
                            {{#if isAuthor}}
                            <a href="/job/{{onePosition._id}}/edit" class="btn-edit">Edit</a>
                            <a href="/job/{{onePosition._id}}/delete" class="btn-delete">Delete</a>
                                {{else}}
                            <!--logged in user who did not apply for current ad-->
                                {{#if isUserApplied}}
                            <a href="/job/{{onePosition._id}}/apply" class="btn-apply">Apply now!</a>
                            <p class="applied-people">Hurry up, {{counter}} people have already applied.</p>
                                {{else}}
                            <!--logged in user who has already applied for current ad-->
                            <p class="already-applied">You have already applied!</p>
                                {{/if}}    
                            {{/if}}
                        </article>
                    </article>
                   

                </article>
            </section>

            <!--This section should only be visible to the author of the current ad-->
            
            {{#if isAuthor}}
            <section id="info-about-candidates">
                <h2>Candidates for this ad:</h2>
                    
                {{#each onePosition.appliedUsers }}
                <article class="info-about-candidates-card">
                    <h2>Email: {{email}}</h2>
                    <h3>Description of the candidate's skills: {{skills}}</h3>
                </article>
                {{/each}}


                
                {{/if}}
                 {{/if}}
            </section>
