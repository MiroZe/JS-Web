
        <section id="details-info">
            <h1>Details</h1>
            <div class="coin-image">
                <img src="{{oneCrypto.image}}">
            </div>

            <div class="coin-info">
                <div class="coin-text">
                    <h1 id="name">{{oneCrypto.name}}</h1>
                    <h3 id="payment">Payment method: {{oneCrypto.paymentMethod}}</h3>
                    <p id="price"><span>Price: ${{oneCrypto.price}}</span></p>
                    <p id="description">{{oneCrypto.description}}</p>
                </div>
                <div class="product-btn">
                    {{#if user}}
                    <!--Only for registered user and author of the publication -->
                        {{#if isOwner}}
                     <div class="author">
                        <a href="/crypto/{{oneCrypto._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/crypto/{{oneCrypto._id}}/delete" class="btn-delete">Delete</a>
                    </div> 
                    <!-- Logged in user who has not yet buy this crypto-->
                    {{else}}
                        {{#unless isAlredyBuyer}}
                    <a href="/crypto/{{oneCrypto._id}}/buy" class="btn-buy">Buy</a> 
                    
                    <!-- Logged in user who has already buy this crypto-->
                        {{else}}
                    <p class="buy-message">You already bought these crypto coins.</p>
                        {{/unless}}
                        {{/if}}
                    {{/if}}
                </div>
            </div>
        </section>
